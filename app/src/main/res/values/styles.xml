<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@drawable/nav_bottom_selector</item>
        <item name="itemTextColor">@drawable/nav_bottom_selector</item>
    </style>

    <!--CarListFragment item car-->
    <style name="TextPrimary" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextPrimary.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSecondary" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
